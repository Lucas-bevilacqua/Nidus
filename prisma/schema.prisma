
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Lead {
  id         String   @id @default(uuid())
  name       String
  email      String
  message    String?
  linkedIn   String?
  experience String?
  role       String?
  interest   String?
  createdAt  DateTime @default(now())
}

model Newsletter {
  id        String   @id @default(uuid())
  email     String   @unique
  createdAt DateTime @default(now())
}
